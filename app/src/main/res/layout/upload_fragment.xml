<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#ecf1f0"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:padding="14dp"
            android:layout_margin="8dp"
            android:background="@drawable/actor_introduce_shape"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/actor_info_et_shape"
                android:hint="名字"
                android:padding="6dp"
                android:textColorHint="#c3c3c3"
                android:textSize="12sp"/>


        <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/actor_info_et_shape"
                android:hint="手机号"
                android:padding="6dp"
                android:textColorHint="#c3c3c3"
                android:textSize="12sp"/>
        <EditText
                android:id="@+id/qq"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/actor_info_et_shape"
                android:hint="QQ"
                android:padding="6dp"
                android:textColorHint="#c3c3c3"
                android:textSize="12sp"/>
        <EditText
                android:id="@+id/wx"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"

                android:background="@drawable/actor_info_et_shape"
                android:hint="微信"
                android:padding="6dp"
                android:textColorHint="#c3c3c3"
                android:textSize="12sp"/>
        <EditText
                android:id="@+id/d"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/actor_info_et_shape"
                android:hint="地址"
                android:padding="6dp"
                android:textColorHint="#c3c3c3"
                android:textSize="12sp"/>
        <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/age"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:background="@drawable/actor_info_et_shape"
                    android:hint="年龄"
                    android:padding="6dp"
                    android:textColorHint="#c3c3c3"
                    android:textSize="12sp"/>
            <EditText
                    android:id="@+id/x"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:background="@drawable/actor_info_et_shape"
                    android:hint="胸围"
                    android:padding="6dp"
                    android:textColorHint="#c3c3c3"
                    android:textSize="12sp"/>
            <EditText
                    android:id="@+id/s"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"

                    android:background="@drawable/actor_info_et_shape"
                    android:hint="身高"
                    android:padding="6dp"
                    android:textColorHint="#c3c3c3"
                    android:textSize="12sp"/>
            <EditText
                    android:id="@+id/t"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:background="@drawable/actor_info_et_shape"
                    android:hint="体重"
                    android:padding="6dp"
                    android:textColorHint="#c3c3c3"
                    android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:layout_margin="8dp"
            android:background="@drawable/actor_introduce_shape"
            android:layout_width="match_parent"
            android:layout_height="330dp">

        <EditText
                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="上课内容"
                android:background="@null"
                android:padding="6dp"
                android:textColorHint="#c3c3c3"
                android:textSize="12sp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_above="@id/iv"
                android:id="@+id/actor_info_rv"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        <ImageView
                android:layout_alignParentBottom="true"
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/carmera"/>
    </RelativeLayout>

</LinearLayout>