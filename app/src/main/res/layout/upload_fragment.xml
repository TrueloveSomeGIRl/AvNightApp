<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:background="#ecf1f0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:padding="14dp"
                android:layout_margin="8dp"
                android:background="@drawable/actor_introduce_shape"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <EditText
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/actor_info_et_shape"
                    android:hint="@string/actor_name"
                    android:padding="6dp"
                    android:textColorHint="#c3c3c3"
                    android:textSize="14sp"/>
            <EditText
                    android:id="@+id/gender_tv"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/actor_info_et_shape"
                    android:hint="@string/gender"
                    android:padding="6dp"
                    android:textColorHint="#c3c3c3"
                    android:textSize="14sp"/>

            <EditText
                    android:id="@+id/city_tv"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/actor_info_et_shape"
                    android:hint="@string/city"
                    android:padding="6dp"
                    android:textColorHint="#c3c3c3"
                    android:textSize="14sp"/>
            <EditText
                    android:id="@+id/qq_tv"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/actor_info_et_shape"
                    android:hint="@string/actor_qq"
                    android:padding="6dp"
                    android:textColorHint="#c3c3c3"
                    android:textSize="14sp"/>

            <EditText
                    android:id="@+id/phone_tv"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="phone"
                    android:digits="1234567890"
                    android:maxLength="11"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/actor_info_et_shape"
                    android:hint="@string/actor_phone"
                    android:padding="6dp"
                    android:textColorHint="#c3c3c3"
                    android:textSize="14sp"/>


            <EditText
                    android:id="@+id/wx_tv"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/actor_info_et_shape"
                    android:hint="@string/actor_wx"
                    android:padding="6dp"
                    android:textColorHint="#c3c3c3"
                    android:textSize="14sp"/>

            <EditText
                    android:id="@+id/address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/actor_info_et_shape"
                    android:hint="@string/actor_address"
                    android:padding="6dp"
                    android:textColorHint="#c3c3c3"
                    android:textSize="14sp"/>

            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/age_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="35dp"
                        android:background="@drawable/actor_info_et_shape"
                        android:hint="@string/actor_age"
                        android:padding="6dp"
                        android:textColorHint="#c3c3c3"
                        android:textSize="14sp"/>

                <EditText
                        android:id="@+id/bust_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="35dp"
                        android:background="@drawable/actor_info_et_shape"
                        android:hint="@string/actor_bust"
                        android:padding="6dp"
                        android:textColorHint="#c3c3c3"
                        android:textSize="14sp"/>

                <EditText
                        android:id="@+id/height_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="35dp"
                        android:background="@drawable/actor_info_et_shape"
                        android:hint="@string/actor_height"
                        android:padding="6dp"
                        android:textColorHint="#c3c3c3"
                        android:textSize="14sp"/>

                <EditText
                        android:id="@+id/weight_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="35dp"
                        android:background="@drawable/actor_info_et_shape"
                        android:hint="@string/actor_weight"
                        android:padding="6dp"
                        android:textColorHint="#c3c3c3"
                        android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="2dp"
                android:layout_margin="4dp"
                android:background="@drawable/actor_introduce_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                    android:id="@+id/class_content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:hint="@string/class_content"
                    android:gravity="top"
                    android:background="@null"
                    android:padding="6dp"
                    android:textColorHint="#c3c3c3"
                    android:textSize="14sp"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:overScrollMode="never"
                    android:id="@+id/actor_info_img_rv"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>

            <ImageView
                    android:id="@+id/camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/camera"/>
        </LinearLayout>

        <EditText
                android:id="@+id/evaluation_tv"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:textSize="14sp"
                android:textColor="#c3c3c3"
                android:paddingEnd="8dp"
                android:hint="@string/evaluation"
                android:paddingBottom="2dp"
                android:layout_margin="4dp"
                android:gravity="top"
                android:layout_height="150dp"
                android:background="@drawable/actor_introduce_shape"
                android:layout_width="match_parent"/>

        <TextView
                android:id="@+id/submit_tv"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:text="@string/submit"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:layout_margin="4dp"
                android:layout_height="50dp"
                android:background="@drawable/actor_introduce_shape"
                android:layout_width="match_parent"/>
    </LinearLayout>
</ScrollView>